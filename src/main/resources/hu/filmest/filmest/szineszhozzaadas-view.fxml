<?xml version="1.0" encoding="UTF-8"?>
<?import javafx.scene.control.*?>
<?import javafx.scene.layout.*?>

<?import javafx.geometry.Insets?>
<VBox xmlns="http://javafx.com/javafx"
      xmlns:fx="http://javafx.com/fxml"
      fx:controller="hu.filmest.filmest.controllers.SzineszFelvetel"
      spacing="10">
    <Label text="Színész neve:"/>
    <TextField fx:id="felvetelSzinesz" promptText="Színész" GridPane.columnIndex="1">
        <VBox.margin>
            <Insets bottom="20.0" />
        </VBox.margin>
    </TextField>
    <HBox alignment="CENTER">
        <Button contentDisplay="CENTER" minWidth="100.0" mnemonicParsing="false" onAction="#onFelvetelButtonClick" prefWidth="90.0" text="Felvétel" />
    </HBox>

</VBox>
