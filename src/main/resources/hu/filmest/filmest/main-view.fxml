                <columns>
                    <TableColumn fx:id="colFelhasznaloId" minWidth="380.0" prefWidth="380.0" maxWidth="380.0"
                                 text="ID"/>
                    <TableColumn fx:id="colFelhasznaloEmail" minWidth="380.0" prefWidth="380.0" maxWidth="380.0"
                                 text="email"/>
                </columns>
            </TableView>
        </VBox>
    </Tab>
</TabPane>
